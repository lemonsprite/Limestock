<Application x:Class="Limestock.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Limestock"
             xmlns:viewmodels="clr-namespace:Limestock.ViewModels"
             xmlns:views="clr-namespace:Limestock.Views">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/General.xaml"/>
                <ResourceDictionary Source="Styles/Icon.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewmodels:DashboardViewModel}">
                <views:DashboardView/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type viewmodels:TransaksiViewModel}">
                <views:TransaksiView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
